<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobEye.Controls;assembly=MobEye"
             x:Class="MobEye.Views.VerificationPage">
    <StackLayout Padding="60"
                 BackgroundColor="#f7f7f7">

        <Image Source="mobeyelogo.png"
               HeightRequest="170"
               WidthRequest="170"/>

        <Label  Style="{StaticResource labelStyle}"
            Text="Enter your SMS code"
            Padding="0,30,0,0"/>
        
        <local:CustomEntry x:Name="Entry_Code" 
                     Placeholder="Code"
                     Margin="0,0,0,20"
                     Keyboard="Numeric"
                           WidthRequest="200"/>

        <Button x:Name="Btn_SendCode" 
                Style="{StaticResource buttonStyle}" 
                BackgroundColor="#99CC00"
                Text="Send"
                 WidthRequest="200"/>
        
        <Button x:Name="Btn_ResendCode" 
                Style="{StaticResource buttonStyle}"  
                Text="Resend code"
                 WidthRequest="200"/>
 
    </StackLayout>
</ContentPage>